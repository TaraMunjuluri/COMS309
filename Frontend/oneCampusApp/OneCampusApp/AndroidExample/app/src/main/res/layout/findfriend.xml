<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".FriendActivity"
    tools:ignore="ExtraText">

    <!-- Header -->
    <TextView
        android:id="@+id/header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Friend/Study Buddy"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingBottom="16dp" />

    <!-- Major Input -->
    <EditText
        android:id="@+id/et_major"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:hint="Enter Major" />

    <!-- Classification Dropdown -->
    <Spinner
        android:id="@+id/spinner_classification"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:spinnerMode="dropdown" />

    <!-- Interests Section -->
    <TextView
        android:layout_width="181dp"
        android:layout_height="106dp"
        android:paddingTop="16dp"
        android:text="Select Your Interests"
        android:textSize="16sp" />

    <!-- ChipGroup for Interests -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_interests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:chipSpacing="8dp"
        app:singleSelection="false">

        <!-- Standard Interests -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_sports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sports"
            android:checkable="true"
            app:chipBackgroundColor="@drawable/chip_background_selector" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music"
            android:checkable="true"
            app:chipBackgroundColor="@drawable/chip_background_selector" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_technology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Technology"
            android:checkable="true"
            app:chipBackgroundColor="@drawable/chip_background_selector" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_reading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reading"
            android:checkable="true"
            app:chipBackgroundColor="@drawable/chip_background_selector" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_travel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travel"
            android:checkable="true"
            app:chipBackgroundColor="@drawable/chip_background_selector" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_gaming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gaming"
            android:checkable="true"
            app:chipBackgroundColor="@drawable/chip_background_selector" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_photography"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photography"
            android:checkable="true"
            app:chipBackgroundColor="@drawable/chip_background_selector" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_art"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Art"
            android:checkable="true"
            app:chipBackgroundColor="@drawable/chip_background_selector" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_movies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movies"
            android:checkable="true"
            app:chipBackgroundColor="@drawable/chip_background_selector" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_fitness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fitness"
            android:checkable="true"
            app:chipBackgroundColor="@drawable/chip_background_selector" />

    </com.google.android.material.chip.ChipGroup>

    <!-- Submit Button -->
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_gravity="center"
        android:paddingTop="16dp" />
</LinearLayout>
