<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LookingFor">

    <Button
        android:id="@+id/btnFriendRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friend Request"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnStudyGrpRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Study Group Request"
        app:layout_constraintTop_toBottomOf="@id/btnFriendRequest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnMentorRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mentor Request"
        app:layout_constraintTop_toBottomOf="@id/btnStudyGrpRequest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnMenteeRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mentee Request"
        app:layout_constraintTop_toBottomOf="@id/btnMentorRequest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
