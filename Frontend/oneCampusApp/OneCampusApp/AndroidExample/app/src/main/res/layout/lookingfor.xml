<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"> <!-- Centers all child elements vertically and horizontally -->

    <Button
        android:id="@+id/btnFriendRequest"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/caribbeanCurrent"
        android:text="FIND FRIENDS/STUDY BUDDY"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnFindMentorRequest"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/airForceBlue"
        android:text="FIND A MENTOR"
        android:layout_marginBottom="20dp" /> <!-- Adds space below this button -->

    <Button
        android:id="@+id/btnFindMenteeRequest"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/cambridgeBlue"
        android:text="FIND A MENTEE"
        android:layout_marginBottom="20dp" /> <!-- Adds space below this button -->


</LinearLayout>
